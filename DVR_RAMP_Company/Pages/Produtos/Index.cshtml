@page
@model DVR_RAMP_Company.Pages.Produtos.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Produtos</h2>
        </div>
        <div class="col-1">
            <a asp-page="Create_PRD" class="btn btn-primary">

                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box" viewBox="0 0 16 16">
                    <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5 8 5.961 14.154 3.5 8.186 1.113zM15 4.239l-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z" />
                </svg>


                <i class="bi bi-pencil-square"></i> &nbsp; Criar Novo Produto @*não consigo meter o icone!!!!*@
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table-bordered table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    MARCA
                   </th>
                <th>
                    SUBMARCA
                </th>
                <th>
                    NOME
                </th>
                <th>PRD_Price</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model.Produtos)  // Declarado no modelo desta página (index.cshtml.cs)
            {
                <tr>
                    <td width="50%">@obj.Id - @obj.PRD_Brand</td>
                    <td width="50%">@obj.PRD_SubBrand</td>
                    <td width="50%">@obj.PRD_Name</td>
                    <td width="50%">@obj.PRD_Price</td>
                    <td>
                        <div class="btn-group w-75" role="group">
                            <a class="btn btn-outline-primary mx-2 text-bg-warning" asp-page="Edit_PRD" asp-route-id="@obj.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                            <a class="btn btn-outline-primary mx-2 text-bg-danger" asp-page="Delete_PRD" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>