<form method="post">
    <div class=border p-3 mt-4>
        <div class="row pb-2">
            <h2 class="text-primary pl-3">CRIAR PRODUTO</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Produtos.PRD_Name">  </label>
            <input asp-for="Produtos.PRD_Name" class="form-control" />
            <span asp-validation-for="@Model.Produtos.PRD_Name" class="bg-danger text-warning "></span>
        </div>
        <div class="mb-3">
            <label asp-for="Produtos.PRD_Brand">  </label>

           @* não precisa fazer @Model.TB_Product.PRD_Brand etc.. como está  no modelo ele percebe*@

            <input asp-for="Produtos.PRD_Brand" class="form-control" />
            <span asp-validation-for="Produtos.PRD_Brand"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Produtos.PRD_SubBrand">  </label>
            <input asp-for="Produtos.PRD_SubBrand" class="form-control" />
            <span asp-validation-for="Produtos.PRD_SubBrand"></span>
        </div>
    </div>

    <div class=border pt-1 mt-1>
        <button type="submit" class="btn btn-outline-primary mt-3" style="width:100px;">Create</button>
        <div asp-validation-summary="All">  </div>
    </div>

    <div class="align-content-center alert-danger"
         asp-validation-summary="All">
    </div>
</form>





